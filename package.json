{
  "name": "itmoptics-web",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/itmo-corp/itmoptics-web.git"
  },
  "bugs": {
    "url": "https://github.com/itmo-corp/itmoptics-web/issues"
  },
  "homepage": ".",
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "@material-ui/styles": "^4.11.3",
    "axios": "^0.21.1",
    "dayjs": "1.10.6",
    "html-react-parser": "1.3.0",
    "is-mobile": "3.0.0",
    "jwt-decode": "^3.1.2",
    "notistack": "1.0.10",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-detect-offline": "2.4.5",
    "react-dom": "^17.0.2",
    "react-iconly": "2.2.3",
    "react-lazy-progressive-image": "1.5.5",
    "react-meta-tags": "1.0.1",
    "react-photoswipe": "1.3.0",
    "react-redux": "^7.2.4",
    "react-router": "5.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-sticky-box": "0.9.3",
    "react-syntax-highlighter": "15.4.4",
    "react-visibility-sensor": "5.1.1",
    "redux": "^4.1.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "sanitize-html": "2.5.0",
    "web-vitals": "^1.0.1",
    "workbox-build": "6.3.0"
  },
  "scripts": {
    "// ---DEFAULT CRA---": "",
    "start": "react-scripts --openssl-legacy-provider start",
    "build": "react-scripts --openssl-legacy-provider build",
    "test": "react-scripts --openssl-legacy-provider test",
    "eject": "react-scripts --openssl-legacy-provider eject",
    "// ---LINTING---": "",
    "eslint": "eslint --ext js,jsx,ts,tsx,json",
    "lint": "yarn run eslint src",
    "lint:fix": "yarn run eslint --fix src",
    "prettier": "prettier --write src/**/*.{js,jsx,json,ts,tsx}",
    "prettier:eslint": "prettier-eslint --write src/**/*.{js,jsx,json,ts,tsx}",
    "// ---OTHER---": "",
    "start:prod": "yarn build && serve -s build",
    "deploy": "yarn build && netlify deploy --dir=build --prod",
    "test:coverage": "CI=true yarn test -- --env=jsdom --coverage",
    "codecov": "CI=true ./node_modules/.bin/codecov --disable=gcov",
    "docs": "jsdoc -c ./.jsdoc.config.json"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/reportWebVitals.{js,ts}",
      "!src/**/*/types.{ts,js}",
      "!src/index.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run prettier:eslint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx}": [
      "yarn run lint:fix",
      "yarn run prettier:eslint",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.1%",
      "not dead",
      "not op_mini all",
      "and_chr 61",
      "and_ff >= 56",
      "and_qq >= 1.2",
      "and_uc >= 11.4",
      "android >= 56",
      "baidu >= 7.12",
      "bb >= 10",
      "chrome >= 62",
      "edge >= 16",
      "firefox >= 56",
      "ios_saf >= 11",
      "opera >= 48",
      "safari >= 11",
      "samsung >= 5"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^12.1.10",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "axios-mock-adapter": "1.20.0",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.8.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-jest-enzyme": "^7.1.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jsdoc": "^3.6.7",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-eslint-cli": "^5.0.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-mock-store": "1.5.4",
    "serve": "13.0.2"
  }
}
